<script>
  function nextChapter(chapterId) {
    // Hide current section and show the next one
    const sections = document.querySelectorAll('section');
    sections.forEach(section => section.style.display = 'none');
    
    document.getElementById(chapterId).style.display = 'block';
}

function lightCandles() {
    const candlesDiv = document.getElementById('candles');
    candlesDiv.innerHTML = "🕯️🕯️🕯️🕯️🕯️";
    setTimeout(() => {
        alert("Happy Birthday, my love!");
    }, 1000);
}
</script>

